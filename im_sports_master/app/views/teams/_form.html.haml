= form_for [@league, @division, @team] do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :captain_email
    = f.text_field :captain_email
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Create Team'
